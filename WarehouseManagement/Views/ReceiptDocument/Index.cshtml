@model IEnumerable<WarehouseManagement.Models.DTOs.ReceiptDocumentReadDto>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Поступления</h2>

<a class="btn btn-primary mb-3" href="@Url.Action("Create")">Добавить поступление</a>

<form id="filterForm" method="post" asp-action="Filter" class="row g-2 align-items-end mb-3">
    <div class="col-auto">
        <input type="text" name="number" class="form-control" placeholder="Номер документа" value="@ViewBag.Number" />
    </div>
    <div class="col-auto">
        <input type="date" name="from" class="form-control" value="@ViewBag.From" />
    </div>
    <div class="col-auto">
        <input type="date" name="to" class="form-control" value="@ViewBag.To" />
    </div>
    <div class="col-auto">
        <select name="resourceIds" asp-items="ViewBag.Resources" multiple class="form-select"></select>
    </div>
    <div class="col-auto">
        <select name="unitIds" asp-items="ViewBag.Units" multiple class="form-select"></select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Фильтровать</button>
    </div>
</form>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Номер документа</th>
            <th>Дата</th>
            <th>Ресурс</th>
            <th>Единица измерения</th>
            <th>Количество</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            if (doc.Resources != null && doc.Resources.Any())
            {
                foreach (var rr in doc.Resources)
                {
                    <tr>
                        <td>@doc.Number</td>
                        <td>@doc.Date.ToString("yyyy-MM-dd")</td>
                        <td>@rr.ResourceName</td>
                        <td>@rr.UnitName</td>
                        <td>@rr.Quantity</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>@doc.Number</td>
                    <td>@doc.Date.ToString("yyyy-MM-dd")</td>
                    <td colspan="3">Нет ресурсов</td>
                </tr>
            }
        }
    </tbody>
</table>
