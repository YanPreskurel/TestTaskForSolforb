@using WarehouseManagement.Models.Entities
@model IEnumerable<Resource>

<h2>Ресурсы</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Добавить ресурс</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Состояние</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.IsActive ? "Активен" : "Архив")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                    @if (item.IsActive)
                    {
                        <a class="btn btn-sm btn-secondary" asp-action="Archive" asp-route-id="@item.Id">В архив</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
